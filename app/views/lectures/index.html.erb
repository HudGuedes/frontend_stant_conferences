<!DOCTYPE html>

<h2>Conferências
<%= link_to "Nova conferência", new_lecture_path, class: "btn btn-primary float-end" %></h2>

<table class="table table-hover">
	<thead>
	  <tr>
	    <th>Conferência</th>
	    <th>Duração</th>
	    <th></th>
	  </tr>
	</thead>

	<tbody>
	  <% @lectures.each do |item| %>
	    <tr>
	      <td><%= item['name'] %></td>
	      <td><%= item['duration'] %></td>
			<td>
			<%= button_to 'Deletar', delete_lecture_path(item['id']), method: :post, class: 'float-end btn btn-danger' %>
	        <%= link_to 'Editar', edit_lecture_path(item['id']), class: 'float-end btn btn-light' %>
	     	</td>
      </tr>
		<% end %>
	</tbody>
</table>

<%= form_with url: import_file_lectures_path, method: :post, multipart: true do |form| %>
  <%= form.file_field :file, class: "btn btn-light" %>
  <%= form.submit "Organizar", class: "btn btn-light" %>
<% end %>
